<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="false"
    android:translationZ="2dp"
    android:id="@+id/cv">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/Title_Text_Wrap"
            card_view:cardElevation="0dp"
            card_view:cardBackgroundColor="#F9F9F9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout

                android:layout_width="match_parent"

                android:layout_height="70dp">

                <com.mobloo.eduknow.CircleImageView
                    android:id="@+id/school_logo_image"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"
                    android:layout_width="55dp"
                    android:layout_height="55dp" />
                <TextView
                    android:textSize="17sp"
                    android:id="@+id/school_name_text"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:text="Papapapapapa"
                    android:textAlignment="center"
                    android:layout_toEndOf="@+id/school_logo_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/feed_date"
                    android:layout_below="@+id/school_name_text"
                    android:textSize="13dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>



</android.support.v7.widget.CardView>



        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/thumbnail"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/Title_Text_Wrap"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="0dp" />

        <TextView
            android:textSize="16sp"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/thumbnail"
            android:layout_centerHorizontal="true"
            android:id="@+id/Content_Text"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:lineSpacingExtra="2dp"
            android:textAlignment="textStart"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.CardView
            android:layout_below="@+id/Content_Text"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:background="#e6e6e6"
            android:layout_height="48dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                android:id="@+id/mailIcon"
                android:background="#e6e6e6"
                android:paddingLeft="7dp"
                android:src="@drawable/mail2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:background="#e6e6e6"
                android:layout_toEndOf="@+id/mailIcon"
                android:layout_height="match_parent"
                android:text="sample"
                android:layout_marginTop="0dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/Student_Name"
                android:textColor="#000000"
                android:textSize="17sp"
                />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>




</android.support.v7.widget.CardView>