<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    app:cardCornerRadius="5dp"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:layout_marginTop="20dp"
    android:layout_height="380dp"
    card_view:cardUseCompatPadding="false"

    android:id="@+id/card_of_fee">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <com.mobloo.eduknow.CircleImageView
            android:id="@+id/school_logo"

            android:layout_marginStart="15dp"

            android:layout_width="52.5dp"
            android:layout_height="52.5dp" />

    <TextView
        android:id="@+id/school_name_fee"
        android:layout_marginStart="12dp"
        android:textSize="17sp"
        android:layout_marginTop="15dp"

        android:layout_toEndOf="@+id/school_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:id="@+id/topCard"
            card_view:cardCornerRadius="0dp"

            android:layout_marginTop="15dp"
            android:layout_below="@+id/school_logo"
            card_view:cardBackgroundColor="#1EBDE7"
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <LinearLayout
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fee_dup"
                    android:textColor="#FFFFFF"
                    android:text="Annual Fee"
                    android:textSize="35sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/fee_amount_dup"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:textSize="35sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>



    <TextView
        android:id="@+id/fee_name"
        android:layout_below="@+id/topCard"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="17sp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


        <Button
            android:id="@+id/pay_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:layout_above="@+id/id_card"

            android:layout_width="340dp"
            android:layout_height="40dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/id_card"
            android:layout_width="match_parent"

            android:layout_alignParentBottom="true"
            card_view:cardBackgroundColor="#F0F0F0"

            android:layout_height="30dp">

            <TextView
                android:id="@+id/fee_id"
                android:layout_gravity="start|center"
                android:paddingStart="7dp"
                android:textColor="#1f3d7a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>






    </RelativeLayout>


</android.support.v7.widget.CardView>